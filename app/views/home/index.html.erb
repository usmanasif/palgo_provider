<div class="jumbotron border-form-div well">
  <% if user_signed_in? %>
      <h1>Welcome <%= current_user.full_name %></h1>

      <p class="lead">
        Your account was successfully confirmed. You are now signed in.
      </p>
      <%= link_to "Sign Out", destroy_user_session_path, :class => 'btn btn-large btn-danger' %>
  <% else %>
      <h2>Welcome, new user!</h2>

      <p class="lead">
        You will receive an email with instructions after sign up about how to unlock your account in a few minutes.
      </p>

      <div class="row-fluid">
        <div class="span4">
          <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
        </div>
        <div class="span4">
          <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
        </div>
      </div>
  <% end %>
</div>